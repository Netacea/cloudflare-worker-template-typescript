{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["es2022", "webworker"],
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types/2022-11-30"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/"
  ]
}
